Description=Secnix MariaDB
After=docker.service
Requires=docker.service
 
[Service]
TimeoutStartSec=30s
Restart=never

User=secnix
Group=root

ExecStartPre=-/usr/bin/docker pull docker.io/mariadb
ExecStartPre=-/usr/bin/docker create --name secnix-mariadb \
                              -e MYSQL_ROOT_PASSWORD={{ mysql_root_password }} \
                              -e MYSQL_DATABASE={{ mysql_database }} \
                              -e MYSQL_USER={{ mysql_user }} \
                              -e MYSQL_PASSWORD={{ mysql_password }} \
                              -v /var/lib/mysql:/var/lib/mysql \
                              -p 3306:3306 \
                              docker.io/mariadb \
                              --character-set-server=utf8mb4 \
                              --collation-server=utf8mb4_unicode_ci

ExecStart=/usr/bin/docker start -a secnix-mariadb

ExecStop=/usr/bin/docker stop secnix-mariadb

[Install]
WantedBy=multi-user.target
